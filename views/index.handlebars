

<div class="container"> <!-- Notepad area-->
	<div class="row notepad">
		<h1>Notepad</h1>
	</div>
	<div class="row"> <!-- Button toolbar -->
		<div class="col-sm-1 md-1 lg-1"></div>
		<div class="col-sm-10 md-10 lg-10 d-flex justify-content-start">
			<button type="button" class="btn btn-primary" id="saveBtn">Save</button>
		</div>	
		<div class="col-sm-1 md-1 lg-1"></div>	
	</div> 

	<div class="row"> <!-- Textarea-->
		<div class="col-sm-1 md-1 lg-1"></div>		
		<div class="col-sm-10 md-10 lg-10 d-flex justify-content-center">
			<textarea id="textArea" autofocus> {{ content }} </textarea>
		</div>	
		<div class="col-sm-1 md-1 lg-1"></div>		
	</div>


</div>
